<h1>Listing clientes</h1>

<table>
  <thead>
    <tr>
      <th>Nif</th>
      <th>Nombre</th>
      <th>Apellidos</th>
      <th>Nombre comercial</th>
      <th>Telefono</th>
      <th>Telf movil</th>
      <th>Fax</th>
      <th>Email</th>
      <th>Web</th>
      <th>Descripcion</th>
      <th>Imagen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_usuario.clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nif %></td>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.apellidos %></td>
        <td><%= cliente.nombre_comercial %></td>
        <td><%= cliente.telefono %></td>
        <td><%= cliente.telf_movil %></td>
        <td><%= cliente.fax %></td>
        <td><%= cliente.email %></td>
        <td><%= cliente.web %></td>
        <td><%= cliente.descripcion %></td>
        <td><%= cliente.imagen %></td>
        <td><%= link_to 'Show', cliente %></td>
        <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

