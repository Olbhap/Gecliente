<!DOCTYPE html>
<html>
<head>
  <title>Gefactura</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if usuario_signed_in?%>
  	<div class="navbar navbar-fixed-top navbar-default" role="navigation">
  		<div class="navbar-inner">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">Gefactura</a>
            </div>
            <div class="navbar-collapse collapse">
              <ul class="nav navbar-nav">
                <li><%= link_to "Facturas", facturas_path %></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
               		 <% if usuario_signed_in? %>
  			    		<li> <%= link_to current_usuario.full_name, edit_usuario_registration_path %> </li>
  			    		<li> <%= link_to "Cerrar Sesión", logout_path %> </li>
  			    	<% else %>
  			    		<li> <%= link_to "Regístrate", signup_path %> </li>
  			    		<li> <%= link_to "Iniciar Sesión", login_path %> </li>
  			    			
  		    		<% end %>
              </ul>
            </div><!--/.nav-collapse -->
          </div><!--/.container-fluid -->
          </div>
        </div>
      <% end %>
      <div class="container">		
        <% flash.each do |type, message| %>
          <div class="<%= flash_class(type) %>">
            <button class="close" data-dismiss="alert">x</button>
            <%= message %>
          </div>
        <% end %>
      	
    		<%= yield %>
    	</div>
	
	

</body>
</html>
