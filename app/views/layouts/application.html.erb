<!DOCTYPE html>
<html>
<head>
  <title>Gefactura</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-fixed-top navbar-default" role="navigation">
		<div class="navbar-inner">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Gefactura</a>
          </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li><%= link_to "Facturas", facturas_path %></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
             		 <% if usuario_signed_in? %>
			    		<li> <%= link_to current_usuario.full_name, edit_usuario_registration_path %> </li>
			    		<li> <%= link_to "Cerrar Sesión", destroy_usuario_session_path, :method => :delete %> </li>
			    	<% else %>
			    		<li> <%= link_to "Regístrate", new_usuario_registration_path %> </li>
			    		<li> <%= link_to "Iniciar Sesión", new_usuario_session_path %> </li>
			    			
		    		<% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
        </div>
      </div>
      <div class="container">
		
      	<% if notice.present?  %>
			<div class="alert alert-info" role="alert"> <%= notice %></div>
		<% end %>

		<% if alert.present? %>
			<div class="alert alert-warning" role="alert"> <%= alert %></div>
		<% end %>

		<%= yield %>
	</div>
	
	

</body>
</html>
