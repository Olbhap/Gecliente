<div class="page-header">
  <h1>Facturas</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Fecha factura |</th>
      <th> Serie factura |</th>
      <th> Numero factura |</th>
      <th> Comentario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_usuario.facturas.each do |factura| %>
      <tr>
        <td><%= factura.fecha_alta %></td>
        <td><%= factura.serie_factura %></td>
        <td><%= factura.numero_factura %></td>
        <td><%= factura.comentario %></td>
        <td><%= link_to 'Show', factura %></td>
        <td><%= link_to 'Edit', edit_factura_path(factura) %></td>
        <td><%= link_to 'Destroy', factura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Factura', new_factura_path %>


